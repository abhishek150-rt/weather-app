<!DOCTYPE html>
<html lang="en">
{{>header}}
<body>
 <!-- NAVBAR -->
   {{>navbar}}
    <!-- Main Header -->
    <div class="container-fluid main-header mt-5">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- ! Left Side header -->
                    <div class="col-md-6 col-12 main-header-left">
                        <p>Welcome to weather App</p>
                        <h1>Get the latest <span style="color: blue;">Weather</span> info of your city</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>
                    <!-- ! right Side header -->
                    <div class="col-md-6 col-12 main-header-right">
                        <div id="carouselExampleControls" class="carousel slide h-100" data-bs-ride="carousel">
                            <div class="carousel-inner h-100">
                              <div class="carousel-item active">
                                <img src="./images/bg1.png" class="w-100 img-fluid h-100" alt="...">
                                       </div>
                              <div class="carousel-item">
                                <img src="./images/Weather Customizable Isometric Illustrations _ Amico Style.png" class="w-100 img-fluid h-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="./images/Weather reporter reporting Weather Forecast news Illustration.png" class="w-100 img-fluid h-100" alt="...">
                      
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    {{>footer}}
</body>
</html>